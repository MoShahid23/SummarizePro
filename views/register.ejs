<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - SummarizePro</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="login-wrapper">
        <!-- Branding Area on the Left -->
        <div class="login-branding">
            <img src="/images/logo.png" alt="SummarizePro Logo" class="logo">
            <h1>SummarizePro</h1>
            <p>A platform designed to help you study better</p>
        </div>

        <!-- Login Form on the Right -->
        <div class="login-form-container">
            <form class="login-form" action="/register" method="post" onsubmit="return validateForm()">
                <h2>Register</h2>
                <% if (typeof message !== 'undefined' && message && message.length) { %>
                    <p style="color: red; text-align: center;"><%= message %></p>
                <% } %>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required
                        <% if (typeof email !== 'undefined' && email && email.length) { %>
                            value = "<%= email %>""
                        <% } %>
                    >
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" pattern=".{6,}" title="Password must be at least 6 characters long" required oninput="validateForm()">
                </div>
                <div class="form-group">
                    <label for="confirm_password">Confirm Password:</label>
                    <input type="password" id="confirm_password" name="confirm_password" required oninput="validateForm()">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-login">Register</button>
                </div>
                <div class="form-group">
                    <button type="button" class="btn-google-login">Login with Google</button>
                </div>
                <p class="signup-link"><a href="/login">Already a member? Login here</a></p>
            </form>

            <script>
                function validateForm() {
                    var password = document.getElementById("password").value;
                    var confirm_password = document.getElementById("confirm_password");
                    var confirm_password_label = confirm_password.previousElementSibling;
                    console.log(confirm_password)
                    if (password != confirm_password.value) {
                        confirm_password_label.innerHTML = "Passwords do not match"
                        confirm_password_label.setAttribute("style", "color:red");
                        return false;
                    }
                    confirm_password_label.innerHTML = "Confirm Password:";
                    confirm_password_label.setAttribute("style", "color:black");
                    warning.remove();
                    return true;
                }
            </script>
        </div>
    </div>
</body>
</html>
