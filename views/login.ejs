<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - SummarizePro</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="login-wrapper">
        <!-- Branding Area on the Left -->
        <div class="login-branding">
            <img src="/images/logo.png" alt="SummarizePro Logo" class="logo">
            <h1>SummarizePro</h1>
            <p>A platform designed to help you study better</p>
        </div>

        <!-- Login Form on the Right -->
        <div class="login-form-container">
            <form class="login-form" action="/login" method="post">
                <h2>Login</h2>
                <% if (typeof message !== 'undefined' && message && message.length) { %>
                    <p style="color: red; text-align: center;"><%= message %></p>
                <% } %>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required
                        <% if (typeof email !== 'undefined' && email && email.length) { %>
                            value = "<%= email %>""
                        <% } %>
                    >
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn-login">Login</button>
                </div>
                <div class="form-group">
                    <button type="button" class="btn-google-login">Login with Google</button>
                </div>
                <p class="signup-link">Not a member? <a href="/register">Register here</a></p>
            </form>
        </div>
    </div>
</body>
</html>
